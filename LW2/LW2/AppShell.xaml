<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LW2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:LW2.View"
    Shell.FlyoutBehavior="Disabled"
    Title="LW2">

    <TabBar>
        <ShellContent
            Title="Production areas"
            ContentTemplate="{DataTemplate view:ProductionAreasTab}"
            Route="ProductionAreasTab" />
        <ShellContent
            Title="Equipment types"
            ContentTemplate="{DataTemplate view:EquipmentTypesTab}"
            Route="EquipmentTypesTab" />
        <ShellContent
            Title="Employees"
            ContentTemplate="{DataTemplate view:EmployeesTab}"
            Route="EmployeesTab" />
        <ShellContent
            Title="Equipment"
            ContentTemplate="{DataTemplate view:EquipmentTab}"
            Route="EquipmentTab" />
    </TabBar>

</Shell>
